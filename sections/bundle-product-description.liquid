    padding: .5rem 1.2rem;
    text-align: left;
  }

  .table thead tr:hover {
    background: #60c659 !important;
  }

  .table tr:nth-child(even) {
    background-color: unset;
    color: unset;
  }

  .table tbody tr {
    border-bottom: 1px solid #bdb4b4;
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
  }

  .table tbody td {
    padding: 6px 10px;
    font-size: 16px;
    padding-left: 1.2rem;
    padding-right: 1.2rem;
    color: #000;
  }

  thead th {
    padding: 5px;
  }

  .table .svg-inline--fa.fa-check {
    width: 22px;
    display: inline-block;
    background-color: #60c659;
    padding: 3px;
    border-radius: 50%;
    vertical-align: middle;
  }

  .head_text {
    font-size: 26px;
    font-weight: 600;
    text-align: center;
  }

  .text-left {
    text-align: left;
  }

  .bundle-description-product h2,
  .list_bulets li {
    color: #000;
  }
  .bundle-description-product {
    box-shadow: rgba(99, 99, 99, 0.5) 0px 2px 8px 0px;
    padding: 20px;
    background: #021d33;
    border-radius: 10px;
    margin-top: 70px;
    background: #fafafa;
  }
  .bundle-description-product p {
    color: #000;
  }
  .bundle-description-product .custom_desc__head {
    margin-top: 0px;
  }

  @media screen and (max-width: 767px) {
   .bundle-description-product p {
      font-size: 16px;
      line-height: 22px;
   }
  .bundle-description-product {
    margin-top: 0px;
  }
  .list_bulets li {
    color: #000;
    font-size: 16px;
  }
