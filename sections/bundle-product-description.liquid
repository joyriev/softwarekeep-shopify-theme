{% assign customids = section.settings.secid %} <div id="{{ customids }}">
  <div class="max-width bundle-description-product"> 
    {% if section.settings.desc_heading != blank %} 
      <div class="desc__customs_defult">
        <h2 class="custom_desc__head">{{ section.settings.desc_heading }}</h2>
      </div> 
    {% endif %}
       {{ product.description }}
  </div>


<style>
  .table {
    width: 100%;
  }

  /* .table *{
