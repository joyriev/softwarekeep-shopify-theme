<style>
  #best__{{ section.id }}{
     background: {{section.settings.bgcolor}};
     padding: 40px 0;
  }
</style>
<div id="best__{{ section.id }}">
<div class="max-width">
  <div class="dels-about_wraps">
    <div class="main_wrap">

      <div class="db_img-sec">
          {% if section.settings.heading != blank %}
           <div class="db_heading">
               <h2>{{ section.settings.heading }}</h2> 
            </div>
          {% endif %}
        {% if section.settings.subparas != blank %}
          {{ section.settings.subparas }}
        {% endif %}
        {% if section.settings.imgs_link != blank %}
           {{ section.settings.imgs_link | image_url: width:'765', height:'470' | image_tag }}
          {% else %}
         <img src="https://cdn.shopify.com/s/files/1/0621/8733/9828/files/deal-comapre.png?v=1711525162" width="765" height="470">
        {% endif %}
      </div>
    </div>
    
    <div class="list_icons-wraps">
      {% for block in section.blocks %}
        <div class="list">
            <div class="icon_img">
              {% if block.settings.iconImage != blank %}
              {% render 'image', src: block.settings.iconImage, size: '40x40', alt: alt %}
              {% else %}
              <img src="https://cdn.shopify.com/s/files/1/0621/8733/9828/files/Pictogram.png?v=1711525716" width="40" height="40">
              {% endif %}
            </div>
            <div class="text-list">
              <h3>{{ block.settings.test_text }}</h3>
              {% if block.settings.test_text_para != blank %}
               {{ block.settings.test_text_para }}
              {% endif %}
            </div>
        </div>
     {% endfor %}
 
    </div>
  </div>
  </div>
</div>
{% schema %}
  {
    "name": "Deals About",
    "settings": [
         {
        "type": "color_background",
        "id": "bgcolor",
        "label": "Background Color section"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "heading",
        "default": "We don’t just care about software.<br> We care about you"
      },
      {
        "type": "richtext",
        "id": "subparas",
        "label": "Sub Paragrapgh",
        "default": "<p>We don’t just care about software. We care about you</p>"
      },
      {
          "type": "image_picker",
          "id": "imgs_link",
          "label": "Select Left Side Image"
       }
    ],
    "blocks": [
     {
       "name": "texticon",
       "type": "text",
       "settings": [
          {
            "type": "image_picker",
            "id": "iconImage",
            "label": "Select Icon (40x40 px)"
         },
          {
            "type": "text",
            "label": "Heading Text",
            "id": "test_text",
            "default": "We offer exceptional 24/7 Costumer Service."
          },
          {
            "type": "richtext",
            "label": "Subparagrapgh Text",
            "id": "test_text_para",
            "default": "<p>We offer exceptional 24/7 Costumer Service.</p>"
          }
       ]
     }
    ]
  }
{% endschema %}