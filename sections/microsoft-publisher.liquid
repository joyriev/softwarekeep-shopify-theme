    background: #f5f5f5;
    padding: 6px 12px;
    color: #28A745;
    font-family: Ubuntu;
    font-size: 14px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    width: fit-content !important;
    border-radius: 4px;
}
.page-microsoft-office-2021-comparison .bg-tabs-products .tab-content-product .text-tabs-products p.discount-text .discount-text-price {
    color: #FFA500;
}
.page-microsoft-office-2021-comparison .bg-tabs-products .tab-content-product .text-tabs-products p.discount-text .discount-text-code {
    color: #ff0000;
}
  
.page-microsoft-office-2021-comparison .bg-tabs-products .tab-content-product .text-tabs-products .list-high-products {
    margin-bottom: 40px;
}

.bg-tabs-products .text-name-tabs-products .product-img-box img {
  display: block;
  width: 90px;
  height: auto;
  max-width: unset;
}

.page-microsoft-office-2021-comparison .bg-tabs-products .tab-content-product .text-name-tabs-products {
  display: flex !important;
  height: 120px;
}  
.page-microsoft-office-2021-comparison .bg-tabs-products .tabs-content .tab-content-product {
  padding-top: 47px;
}

.prices-info-products span.tag-discount {
  font-weight: 700;
  font-size: 13px;
  line-height: 16px;
  color: #00662b;
  padding: 5px 9px;
  height: 25px;
  background: #cbf3dc;
  border-radius: 2px;
  display: flex;
  align-items: center;
  justify-content: center;
}

