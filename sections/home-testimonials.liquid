<div id="test__{{ section.id }}">
  <div class="max-width">
    <div class="home_tmonial">
        {% for block in section.blocks %}
          <!-- Testimonial -->
            <div>
                <div class="t_box">
                  <div class="bg_profile">
                    <div class="hm-profiles">
                       <div class="auth_profile">
                         <p class="names">{{ block.settings.authorName }}</p>
                         <p class="subtitles">{{ block.settings.authorsubtitle }}</p>
                       </div>
                        {% if block.settings.iconImage != blank %}
                          <div class="auther-icon_wrap">
                           {% render 'image', src: block.settings.iconImage, size: '150x150', class: 'testimonial__author--image', alt: alt %}
                          </div>
                       {% endif %}
                    </div>
                  </div>
                  <div class="homet_component">
                    <div class="border-lfts">
                     
                       <div class="rating_icons">
                        {% if block.settings.authorImage != blank %}
                          {{ block.settings.authorImage | image_url:width:'97', height:'97' | image_tag: class:"rat_icons" }}
                         {% endif %}
                         <img src="https://cdn.shopify.com/s/files/1/0090/2125/9831/files/vido-icon-rating.png?v=1708675186" alt="">
                       </div>
                       <div class="t-contents">
                          {{ block.settings.test_text }}
                       </div>
                    </div>
                  </div>
                </div>
            </div>
        {% endfor %}    
    </div>

  </div>
</div>

<style>
#test__{{ section.id }}{
  background: {{section.settings.sec_bckground}}; 
}
.home_tmonial{
  padding: 30px 0;
}
.home_tmonial .slick-next{
  width: 50px;
  height: 50px;
  right: -55px;
  background: url(/cdn/shop/files/arrow-next.png?v=1722251072) no-repeat center center #fff;
  background-size: 100%;
  border-radius: 50%;
  box-shadow: 0 0 10px 4px rgba(0, 0, 0, 0.1);
  -webkit-box-shadow: 0 0 10px 4px rgba(0, 0, 0, 0.1);
}
.home_tmonial .slick-prev:before {
  display:none;
}
.home_tmonial .slick-prev {
    width: 50px;
    height: 50px;
    left: -55px;
    background: url(/cdn/shop/files/prev-arrow.png?v=1722251072) no-repeat center center #fff;
    background-size: 100%;
    border-radius: 50%;
    box-shadow: 0 0 10px 4px rgba(0, 0, 0, 0.1);
    -webkit-box-shadow: 0 0 10px 4px rgba(0, 0, 0, 0.1);
}
.border-lfts {
    border-left: 5px solid;
    padding-left: 20px;
}
.rating_icons {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.homet_component {
    box-shadow: 0px 4px 4px 0px #00000040;
    padding: 80px 20px;
    background: #fff;
    border-radius: 20px;
    padding-bottom: 30px;
    width: 100%;
    max-width: 90%;
    margin-left: auto;
    display: flex;
    justify-content: end;
}

.hm-profiles {
  display: flex;
  align-items: center;
  position: relative;
  top: 45px;
}
.auther-icon_wrap {
  max-width: 130px;
  border: 3px solid #000;
  border-radius: 50%;
  position: absolute;
  right: 0;
}
.auth_profile {
  background:#04225C;
  padding: 25px 40px;
  width: 75%;
}
.auth_profile .names{
  font-size: 22px;
  font-weight:600;
}
.auth_profile .subtitles{
  font-size: 12px;
  font-weight:500;
}
.auth_profile p{
  color: #fff;
  margin: 0px;
}
.homet_component p{
  color: #000;
}
.home_tmonial .t_box {
  position: relative;
  margin: 0px 20px 20px 20px;
}
@media screen and (max-width:1024px) {
  .home_tmonial {
    overflow: hidden;
    padding:0px;
  }
  .rating_icons img:first-child{
    max-width:50px;
  }
  .auth_profile p {
    color: #fff;
    margin: 5px 0;
  }
  .auth_profile {
   padding: 12px 40px;
 }
  .rating_icons {
    flex-direction: column;
    gap: 10px;
  }
  #test__{{ section.id }}{
    margin-bottom:40px;
  }
}
</style>
<script>
  $('.home_tmonial').slick({
  infinite: true,
  slidesToShow: 3,
  slidesToScroll: 1,
    responsive: [
    {
      breakpoint: 1024,
      settings: {
        arrows: false,
        autoplay: false,
        autoplaySpeed: 2000,
        slidesToShow: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        arrows: false,
        autoplay: true,
        autoplaySpeed: 1000,
        slidesToShow: 1
      }
    }
  ]
});
</script>

{% schema %}
  {
    "name": "Home Testimonials",
    "class":"best_testmonial",
    "settings": [
         {
        "type": "header",
        "content": "Section Background"
      },
      {
        "type": "color",
        "id": "sec_bckground",
        "label": "Section Background",
        "default":"#02276B"
      }
    ],
    "blocks": [
     {
       "name": "Content List",
       "type": "text",
       "settings": [
            {
              "type": "image_picker",
              "label": "Select Icon",
              "id": "iconImage"
            },
            {
              "type": "richtext",
              "label": "Testimonial Text",
              "id": "test_text",
              "default": "<p>I switched from Office 365 to Truly Office and never looked back. It's fast, affordable, and protects my privacy.</p>"
            },
            {
                "type": "header",
                "content": "Author"
            },
            {
                "type": "text",
                "label": "Author name",
                "default": "John Doe",
                "id": "authorName"
            },
            {
                "type": "textarea",
                "label": "Author Sub Title",
                "id": "authorsubtitle"
            },
            {
                "type": "image_picker",
                "label": "Trust Badge",
                "id": "authorImage"
           }
       ]
     }
    ],
    "presets": [{"name": "Home Testimonials"}]
  }
{% endschema %}