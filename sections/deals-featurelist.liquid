<div class="max-width">
  <div class="flist_container">
    {% for block in section.blocks %}
      <div class="list">
        <div id="bgs__{{ block.id }}" class="list_tile">
          <h2 class="bg_heading">{{ block.settings.heading }}</h2>
        </div>
        <div class="fwraper">
          <div class="icons_img">
            {% if block.settings.fimage != blank %}
             {{ block.settings.fimage | image_url: width:'260', height:'260' | image_tag }}
            {% endif %}
          </div>
          <div class="item_list">
            <ul class="check-list">
              {% if block.settings.test_text1 != blank %}
                 <li>{{ block.settings.test_text1 }}</li>
                {% else %}
                <li>100% genuine Microsoft software keys with lifetime access.</li>
              {% endif %}
              {% if block.settings.test_text2 != blank %}
                <li>{{ block.settings.test_text2 }}</li>
                {% else %}
                <li>Trusted licenses for Windows, Office, and more, ensuring security and performance.</li>
              {% endif %}
              {% if block.settings.test_text3 != blank %}
                <li>{{ block.settings.test_text3 }}</li>
                {% else %}
               <li>Enjoy seamless updates and continuous support without the risk of counterfeit products.</li>
              {% endif %}
            </ul>
          </div>
        </div>
     </div>
      <style>
        #bgs__{{ block.id }}{
          background: {{block.settings.hcolor}};
        }
      </style>

    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Deal Feature List",
    "class" : "deal_feature-list",
    "settings": [
      {
        "type": "text",
        "id": "htext",
        "label": "Heading",
        "default": "How Softwarekeep Compares"
      }
    ],
    "blocks": [
      {
        "type": "list",
        "name":"feature list",
        "settings": [
           {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Genuine Microsoft Products"
           },
           {
              "type": "color",
              "id": "hcolor",
              "label": "Heading Background",
              "default": "#1A2843"
           },
           {
            "type": "image_picker",
            "id": "fimage",
            "label": "Select Image",
           },
          {
            "type": "textarea",
            "label": "List text First",
            "id": "test_text1"
          },
          {
            "type": "textarea",
            "label": "List text Second",
            "id": "test_text2"
          },
          {
            "type": "textarea",
            "label": "List text Third",
            "id": "test_text3"
          }
          
       ]
      }
    ]
  }
{% endschema %}