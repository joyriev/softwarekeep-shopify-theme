<div class="max-width hm_services">
  {% if section.settings.pageheading != blank %}
   <h2 class="ser_heading">{{ section.settings.pageheading }}</h2>
  {% endif %}
  <div class="home-service">
    {% for block in section.blocks %}
      <div class="list_service">
        <div class="icons">
         {{ block.settings.iconImage | image_url: width:'125', height:'125' | image_tag }}
          {% if block.settings.test_text  != blank %}
            <p class="nums tbview_nums">{{ block.settings.test_text }}</p>
          {% endif %}
        </div>
        <div class="text_sec">
          {% if block.settings.test_text  != blank %}
            <p class="nums desk_num">{{ block.settings.test_text }}</p>
          {% endif %}
          {% if block.settings.test_text_para != blank %}
            <div class="p-text">
             {{ block.settings.test_text_para }}
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
    
  </div>
</div>

<style>
.hm_services{
  padding: 40px 0;
  margin-bottom:50px;
}
.tbview_nums{
  display:none;
}
.home-service {
  justify-content: space-between;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 40px;
  padding-top: 50px;
}
.ser_heading {
  text-align: center;
  font-size: 50px;
  font-weight: 600;
  margin-top: 0;
}
.home-service .list_service {
  box-shadow: 10px 10px 23.5px 1px #00000040;
  border-radius: 50px;
  background: #eee;
  width: calc(50% - 60px);
  padding: 20px;
  justify-content: space-around;
  display: flex;
  align-items: center;
  position: relative;
}
.home-service .list_service .icons {
  position: absolute;
  left: -59px;
}
.text_sec {
  display: flex;
  gap: 40px;
}
.home-service .p-text {
  max-width: 270px;
  font-size: 20px;
}
.list_service .nums {
  font-size: 50px;
  margin: 0;
  font-weight: 700;
}
@media screen and (max-width:1024px) {
  .hm_services {
    padding: 0 20px;
  }
  .list_service .nums {
    font-size: 24px;
  }
  .home-service {
    gap: 20px;
    margin-bottom: 50px;
  }
  .home-service .list_service {
    width: 45%;
    border-radius: 30px;
    gap: 10px;
    flex-direction: column;
    margin-bottom: 20px;
  }
  .text_sec {
    gap: 10px;
    flex-direction: column;
    align-items: center;
  }
  .text_sec .p-text p{
    margin: 0px;
  }
 .home-service .list_service .icons {
    width: 100%;
    position: unset;
    left: unset;
    max-width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
}
   .tbview_nums{
    display:block;
  }

  .home-service .list_service .icons img{
    max-width: 60px;
  }
  .desk_num{
    display:none;
  }
  .ser_heading {
    font-size: 28px;
  }
 .home-service .p-text {
    text-align: center;
  }
}
@media screen and (max-width:767px) {
  .home-service .list_service {
    width: 100%;
    flex-direction: column;
    margin-bottom: 20px;
  }
}
@media screen and (max-width:980px) {

}
</style>
{% schema %}
  {
    "name": "Home Service",
    "settings": [
      {
        "type": "text",
        "id": "pageheading",
        "label": "Heading",
        "default": "We donâ€™t just care about software.<br> We care about you"
      },
    ],
    "blocks": [
     {
       "name": "service",
       "type": "text",
       "settings": [
          {
            "type": "image_picker",
            "id": "iconImage",
            "label": "Select Icon (125x125 px)"
          },
          {
            "type": "text",
            "label": "Number Text",
            "id": "test_text",
          },
          {
            "type": "richtext",
            "label": "Subparagrapgh Text",
            "id": "test_text_para",
            "default": "<p>We offer exceptional 24/7 Costumer Service.</p>"
          }
       ]
     }
    ],
    "presets": [{"name": "Home Service"}]
  }
{% endschema %}