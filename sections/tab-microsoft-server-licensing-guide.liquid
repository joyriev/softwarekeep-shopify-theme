      {
        "type": "header",
        "content": "Button Name and link"
      },
      {
        "type": "url",
        "id": "cat_link",
        "label": "Button link shpop window server"
      },
      {
        "type": "text",
        "id": "cat_link_text",
        "label": "Button shpop window server"
      },
      {
        "type": "header",
        "content": "Request Quote"
      },
      {
        "type": "text",
        "id": "rqtext",
        "label": "Request Quote Button text"
      },
      {
        "type": "text",
        "id": "rqlink",
        "label": "Button Link"
      },
      {
        "type": "header",
        "content": "Select Tab"
      },
      {
        "type": "text",
        "id": "alltab",
        "label": "Select all Tab",
        "default": " Select All"
      },
      {
        "type": "text",
        "id": "alltabone",
        "label": "Select all Tab",
