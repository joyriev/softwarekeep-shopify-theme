<div id="appinc__{{ section.id }}">
  <div class="max-width">
    <div class="headings">
      <h2 class="diff-heads">{{ section.settings.heading }}</h2>
    </div>
    <div class="appic--conatiner">
      <div class="apps-included">
        <ul class="apps-list">
          {% for block in section.blocks %}
            {% if block.settings.appicimage != blank %}
              <li class="list-item">
                <div class="list-img">
                  {{ block.settings.appicimage | image_url: width:'64', height:'64' | image_tag }}
                </div>
                <div class="list-text">
                  <h3>{{ block.settings.appinchtext }}</h3>
                  <p>{{ block.settings.appincparatext }}</p>
                </div>
              </li>
              {% else %}
              <li class="list-item">
                <div class="list-img">
                  <img src="{{ 'ms-icon-word.webp' | asset_url }}" alt="word-icon" width="64" height="64">
                </div>
                <div class="list-text">
                  <h3>Microsoft Word</h3>
                  <p>Elevate your writing, create beautiful documents and collaborate with others â€“ anytime, anywhere.</p>
                </div>
              </li>
            {% endif %}
          {% endfor %}
    
        </ul>
     </div>
   </div>
  </div>
</div>
<style>
  #appinc__{{ section.id }}{
    background: {{section.settings.secbg}};
    margin: 10px 0;
  }
  @media screen and (max-width: 980px) {
  .summary-benefits .acc-text {
    margin: 0 5px;
   }
 }
</style>


{% schema %}
  {
    "name": "Application Included",
    "settings": [
      {
        "type": "color",
         "id": "secbg",
         "label": "Section background Color",
         "default": "#fff"
       },
      {
        "type": "text",
         "id": "heading",
         "label": "Section Heading",
         "default": "Applications Included"
       },
    ],
    "blocks": [
     {
       "name": "text",
       "type": "image",
       "settings": [
         {
          "type": "color",
           "id": "blocksecbg",
           "label": "Background Color",
           "default": "#fff"
         },
         {
           "type": "image_picker",
           "id": "appicimage",
           "label": "Image"
         },
         {
           "type": "text",
           "id": "appinchtext",
           "label": "Heading"
         },
         {
           "type": "richtext",
           "id": "appincparatext",
           "label": "Small Paragrapgh Text",
           "default": "<p>Microsoft Word is a widely-used word processing software that enables users to create</p>"
         }
       ]
     }
  ],
    "presets": [
      {
        "name": "Application Included"
      }
    ]
  }
{% endschema %}